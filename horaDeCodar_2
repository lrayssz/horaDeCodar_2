programa {
  funcao inicio() {

    inteiro primeiroNumero
    inteiro segundoNumero

    escreva("Digite o primeiro número ")
    leia(primeiroNumero)

    escreva("Digite o segundo número ")
    leia(segundoNumero)

    se(primeiroNumero > segundoNumero) {

      escreva("O maior número é: ", primeiroNumero)
    }

    senao se(primeiroNumero < segundoNumero) {

      escreva("O maior número é: ", segundoNumero)

      ex02()
      
    }
    
  }

  funcao ex02() {

    inteiro numero

    escreva("Digite um número ")
    leia(numero)

      se(numero > 0) {
        escreva("O número escolhido é positivo")
      }

      senao se(numero < 0) {
        escreva("O número escolhido é negativo")
      }

      senao {
        escreva("O número escolhido é zero")
      }

      ex03()
  }

  funcao ex03() {

    inteiro numeroUm, numeroDois, numeroTres

    escreva("Digite o primeiro número ")
    leia(numeroUm)
    escreva("Digite o segundo número ")
    leia(numeroDois)
    escreva("Digite o terceiro número ")
    leia(numeroTres)

    se(numeroUm > numeroDois e numeroUm > numeroTres) {
      escreva(numeroUm , " é o maior")
    }

    senao se(numeroDois > numeroUm e numeroDois > numeroTres) {
      escreva(numeroDois , " é o maior")
    }

    senao {
      escreva(numeroTres , " é o maior")
    }

    ex04()

  }

  funcao ex04() {

    inteiro numeroUmm, numeroDoiss, numeroTress

    escreva("Digite o primeiro número ")
    leia(numeroUmm)
    escreva("Digite o segundo número ")
    leia(numeroDoiss)
    escreva("Digite o terceiro número ")
    leia(numeroTress)

    se(numeroUmm < numeroDoiss e numeroUmm < numeroTress) {
      escreva("A soma é " , numeroDoiss + numeroTress)
    }

    senao se(numeroDoiss < numeroUmm e numeroDoiss < numeroTress) {
      escreva("A soma é " , numeroUmm + numeroTress)
    }

    senao {
      escreva("A soma é " , numeroUmm + numeroDoiss)
    }

    ex05()

  }

  funcao ex05() {

    inteiro valorUm, valorDois, valorTres, valorQuatro, valorCinco, valorSeis
    real media
    inteiro soma

    escreva("Digite o primeiro valor ")
    leia(valorUm)

    escreva("Digite o segundo valor ")
    leia(valorDois)

    escreva("Digite o terceiro valor ")
    leia(valorTres)

    escreva("Digite o quarto valor ")
    leia(valorQuatro)

    escreva("Digite o quinto valor ")
    leia(valorCinco)

    escreva("Digite o sexto valor ")
    leia(valorSeis)

    soma = valorUm + valorDois + valorTres + valorQuatro + valorCinco + valorSeis

    media = soma/6

    escreva("A media é " , media)

    ex06()

  }

  funcao ex06() {

    inteiro valor1, valor2, valor3, valor4

    escreva("Digite o primeiro número ")
    leia(valor1)

    escreva("Digite o segundo número ")
    leia(valor2)

    escreva("Digite o terceiro número ")
    leia(valor3)

    escreva("Digite o quarto número ")
    leia(valor4)

    se(valor1 > valor2 e valor1 > valor3 e valor1 > valor4) {
      escreva(valor1 , "\n" , valor4 , "\n" , valor1)
    }

    senao se(valor2 > valor1 e valor2 > valor3 e valor2 > valor4) {
      escreva(valor1 , "\n" , valor4 , "\n" , valor2)
    }

    senao se(valor3 > valor1 e valor3 > valor2 e valor3 > valor4) {
      escreva(valor1 , "\n" , valor4 , "\n" , valor3)
    }

    senao {
      escreva(valor1 , "\n" , valor4 , "\n" , valor4)
    }

    ex07()

  }

  funcao ex07() {

    inteiro numero1, numero2, numero3, numero4, numero5, numero6
    real soma

    escreva("Digite o primeiro número ")
    leia(numero1)

    escreva("Digite o segundo número ")
    leia(numero2)

    escreva("Digite o terceiro número ")
    leia(numero3)

    escreva("Digite o quarto número ")
    leia(numero4)

    escreva("Digite o quinto número ")
    leia(numero5)

    escreva("Digite o sexto número ")
    leia(numero6)

    se(numero1 < 72 e numero2 < 72 e numero3 < 72 e numero4 < 72 e numero5 < 72 e numero6 < 72) {

      soma = numero1 + numero2 + numero3 + numero4 + numero5 + numero6

      escreva("Os números informados foram ", numero1 , numero2 , numero3 , numero4 , numero5 , numero6 , " e a soma dos inferiores a 72 é " , soma
 )
    }
  }
  }
}
